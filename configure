#
# Need to install pip.  From  https://pip.pypa.io/en/latest/installing/
# retrieve this file: https://bootstrap.pypa.io/get-pip.py
export PIP=https://bootstrap.pypa.io/get-pip.py
wget -O inst/python/get-pip.py $PIP
if [ "$?" -ne "0" ]; then
	curl -o inst/python/get-pip.py $PIP
fi
if [ "$?" -ne "0" ]; then
  echo "Failed to download $PIP"
  exit 1
fi

# Now run the downloaded script
#
Rscript tools/installPip.R



# build the .Rd files
# Note:  We want to just call 'tools/createRdFiles.R .' but it doesn't work on cygwin (Windows)
Rscript tools/createRdFiles.R .
